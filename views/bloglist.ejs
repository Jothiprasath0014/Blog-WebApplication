<!--Blog List-->


<%- include("partials/header") %>

<h1>Your Blog List</h1>

<div class="blog-list">
    <% for (var i = 0; i < blogList.length; i++) { %>
        <div class="blog-item">
            <div class="blog-content">
                <h4><%= blogList[i].title %></h4>
                <p>
                    <% if (blogList[i].description) { %>
                        <%= blogList[i].description.slice(0, 300) %>
                        <% if (blogList[i].description.length > 300) { %> ...
                        <% } %>
                    <% } else { %>
                        No description available.
                    <% } %>
                </p>
            </div>
            <div class="blog-actions">
                <a class="btn view-btn" href="/blogDetails/<%= blogList[i].id %>">View Blog</a>
                <a class="btn edit-btn" href="/editBlog/<%= blogList[i].id %>">Edit Blog</a>
                <form action="/deleteBlog/<%= blogList[i].id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this blog?');">
                    <button type="submit" class="btn delete-btn">Delete Blog</button>
                </form>
            </div>
        </div>
    <% } %>
</div>

<%- include("partials/footer") %>
